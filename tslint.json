{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-sonarts", "tslint-config-prettier"],
  "jsRules": {
    "no-unused-expression": true
  },
  "rules": {
    "align": [true, "arguments", "parameters", "statements"],
    "array-type": [true, "array-simple"],
    "arrow-parens": false,
    "await-promise": [true, "Bluebird", "Connection", "Query", "Aggregate"],
    "class-name": true,
    "curly": true,
    "encoding": true,
    "eofline": true,
    "file-name-casing": [true, "kebab-case"],
    "import-spacing": true,
    "indent": [true, "spaces", 2],
    "interface-name": [true, "never-prefix"],
    "linebreak-style": [true, "LF"],
    "max-classes-per-file": [true, 1],
    "max-line-length": [true, 120],
    "member-access": true,
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "private-static-field",
          "public-instance-field",
          "private-instance-field",
          "public-constructor",
          "private-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "newline-before-return": true,
    "no-console": true,
    "no-duplicate-imports": true,
    "no-duplicate-string": [true, 5],
    "no-empty": false,
    "no-empty-interface": false,
    "no-floating-promises": true,
    "no-invalid-await": false,
    "no-require-imports": true,
    "no-return-await": true,
    "no-submodule-imports": false,
    "no-unused-expression": false,
    "object-literal-shorthand": false,
    "object-literal-sort-keys": true,
    "one-line": true,
    "one-variable-per-declaration": true,
    "ordered-imports": false,
    "prefer-const": true,
    "quotemark": [true, "single", "avoid-escape"],
    "semicolon": [true, "always"],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "triple-equals": true,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration",
      "object-destructuring",
      "array-destructuring"
    ],
    "variable-name": [true, "ban-keywords", "allow-leading-underscore"],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-postbrace",
      "check-preblock",
      "check-rest-spread",
      "check-separator",
      "check-type",
      "check-type-operator",
      "check-typecast"
    ]
  },
  "rulesDirectory": []
}
